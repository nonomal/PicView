<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="PicView.Avalonia.Views.UC.Buttons.StarOutlineButtons"
    x:DataType="viewModels:MainViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:PicView.Avalonia.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.DataContext>
        <viewModels:MainViewModel />
    </Design.DataContext>

    <StackPanel Orientation="Horizontal">
        <Canvas
            PointerEntered="Star1_OnPointerEntered"
            PointerExited="Stars_OnPointerExited"
            Width="30">
            <Button
                Background="Transparent"
                Canvas.Left="5"
                Canvas.Top="3"
                Click="OneStarCLick"
                Command="{Binding SetExifRating1Command}"
                Foreground="{DynamicResource MainTextColor}"
                x:Name="Star1">
                <Image
                    Height="20"
                    Source="{StaticResource StarOutlineDrawingImage}"
                    Width="20"
                    x:Name="Star1Icon" />
            </Button>
        </Canvas>
        <Canvas
            PointerEntered="Star2_OnPointerEntered"
            PointerExited="Stars_OnPointerExited"
            Width="30">
            <Button
                Background="Transparent"
                Canvas.Left="3"
                Canvas.Top="3"
                Click="TwoStarCLick"
                ClickMode="Release"
                Command="{Binding SetExifRating2Command}"
                x:Name="Star2">
                <Image
                    Height="20"
                    Source="{StaticResource StarOutlineDrawingImage}"
                    Width="20"
                    x:Name="Star2Icon" />
            </Button>
        </Canvas>
        <Canvas
            PointerEntered="Star3_OnPointerEntered"
            PointerExited="Stars_OnPointerExited"
            Width="30">
            <Button
                Background="Transparent"
                Canvas.Left="3"
                Canvas.Top="3"
                Click="ThreeStarCLick"
                ClickMode="Release"
                Command="{Binding SetExifRating3Command}"
                x:Name="Star3">
                <Image
                    Height="20"
                    Source="{StaticResource StarOutlineDrawingImage}"
                    Width="20"
                    x:Name="Star3Icon" />
            </Button>
        </Canvas>
        <Canvas
            PointerEntered="Star4_OnPointerEntered"
            PointerExited="Stars_OnPointerExited"
            Width="30">
            <Button
                Background="Transparent"
                Canvas.Left="3"
                Canvas.Top="3"
                Click="FourStarCLick"
                ClickMode="Release"
                Command="{Binding SetExifRating4Command}"
                x:Name="Star4">
                <Image
                    Height="20"
                    Source="{StaticResource StarOutlineDrawingImage}"
                    Width="20"
                    x:Name="Star4Icon" />
            </Button>
        </Canvas>
        <Canvas
            PointerEntered="Star5_OnPointerEntered"
            PointerExited="Stars_OnPointerExited"
            Width="30">
            <Button
                Background="Transparent"
                Canvas.Left="3"
                Canvas.Top="3"
                Click="FiveStarCLick"
                ClickMode="Release"
                Command="{Binding SetExifRating5Command}"
                x:Name="Star5">
                <Image
                    Height="20"
                    Source="{StaticResource StarOutlineDrawingImage}"
                    Width="20"
                    x:Name="Star5Icon" />
            </Button>
        </Canvas>
    </StackPanel>
</UserControl>